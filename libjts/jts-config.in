#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@

usage()
{
    cat <<EOF
Usage: jts-config [OPTIONS]
Options:
     [--libdir]
     [--includedir]
EOF
    exit $1
}
if test $# -eq 0; then
  usage 1 1>&2
fi
while test $# -gt 0; do
case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
esac
case $1 in
    --libdir)
      echo @libdir@
      ;;
    --includedir)
      echo @includedir@
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

